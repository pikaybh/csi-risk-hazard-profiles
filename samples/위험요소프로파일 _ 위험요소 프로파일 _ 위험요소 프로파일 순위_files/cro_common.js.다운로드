		saveCheckInfo:function() { //저장시 체크
			
			if (ca < 1) {
				alert("개인정보 수집 내용을 펼치기하여 상세내용을 확인해 주세요");
				return false;
			}
			
			if (cb < 1) {
				alert("제3자에게 정보 제공 내용을 펼치기하여 상세내용을 확인해 주세요");
				return false;
			}
			
			let isSave = true;
			if ($("input[name=person_info_yn]:checked").val() === 'N') {
				alert("개인정보 수집 미동의시 신청 불가합니다.");
				return false;
			}
			if ($("input[name=person_info3_yn]:checked").val() === 'N') {
				alert("제3자에게 정보 제공 미동의시 신청 불가합니다.");
				return false;
			}
			return isSave;
		}
	}
